<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="22dp"
        android:text="AD SOYAD"
        android:id="@+id/txtAdSoyad" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtAdSoyad"
        android:layout_centerHorizontal="true"
        android:text="DURUMU"
        android:id="@+id/txtDurum" />

    <Button
        android:text="GERİ DÖN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/btnGeri"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_below="@+id/txtAdSoyad"
        android:layout_alignLeft="@+id/txtAdSoyad"
        android:layout_alignStart="@+id/txtAdSoyad" />
</RelativeLayout>